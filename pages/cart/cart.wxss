/* pages/cart/cart.wxss */
page{
  background: #f5f5f5;
}
.cart-not-empty {
  margin: 0 auto 25rpx;
  width: 100%;
}

.cart-state {
  height: 100rpx;
  clear: both;
  background: #fe6700;
}

.select-all {
  float: left;
  display: block;
  padding:18rpx 30rpx;
}

.select-all .check {
  margin-top: 8rpx;
}

.select-all .no-check {
  margin-top: 8rpx;
}

.check {
  float: left;
  display: block;
}

.no-check {
  float: left;
  display: block;
  border: 1px solid #333333;
  border-radius: 100%;
}

.select-all text {
  float: left;
  display: block;
  padding-left: 20rpx;
  font-size: 30rpx;
  padding-top: 12rpx;
}

.numbers{
  display: inline-block;
  line-height: 100rpx;
}
.numbers text{
  padding-left: 20rpx;
  font-size:30rpx; 
  color: #fff;
}
.edit {
  float: right;
  display: block;
  padding:25rpx 30rpx;
  color: #fff;
}

.cart-list {
  width:100%;
  background: white;
  border-top: 1px solid #f5f5f5;
  margin-bottom: 200rpx;
}

.cart-list-item {
  position:relative;
  display: flex;
  flex-direction: row;
  align-items: left;
  border-bottom: 1px solid #f5f5f5;
}

.cart-list .check {
  padding:25rpx 0 0 30rpx;
}

.cart-list .no-check {
  margin:25rpx 0 0 30rpx;
}



.cart-list .cart-list-a {
  padding:20rpx 0 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: left;
  background: #fff;
}

.cart-list .cart-list-a .cart-list-img {
  display: block;
  width:200rpx;
  height:200rpx;
  padding-bottom: 15rpx;
  box-sizing: border-box;
  
}

.cart-list .cart-list-a .cart-list-text {
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 60%;
  height: 200rpx;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.cart-list .cart-list-a .cart-list-text .cart-list-title {
  padding-bottom: 10rpx;
}

.cart-list .cart-list-a .cart-list-text .cart-list-price {
  font-size: 32rpx;
  color: #fe6700;
}

.cart-list .cart-list-a .cart-list-text .cart-list-num {
  padding-left: 20rpx;
  color: gray;
}

.cart-list .cart-list-a .cart-list-cnt {
  display: flex;
  flex-direction: row;
  align-items: center;
  position:absolute;
  bottom: 15rpx;
  right: 30rpx;
}

.cart-list .cart-list-a .cart-list-cnt .cart-list-minus {
  height: 50rpx;
  background: #f5f5f5;
  margin: 0 0 0 10rpx;
  padding: 0 20rpx;
}

.minus-disable {
  color: gainsboro;
}

.cart-list .cart-list-a .cart-list-cnt .int {
  width: 40rpx;
  height: 50rpx;
  background: #f5f5f5;
  margin: 0 0 0 10rpx;
  padding: 0 0 0 20rpx;
}

.cart-list .cart-list-a .cart-list-cnt .cart-list-plus {
  height: 50rpx;
  background: #f5f5f5;
  margin: 0 0 0 10rpx;
  padding: 0 20rpx;
}

.cart-bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 88rpx;
  background: #fff;
  z-index: 2;
}

.cart-bottom .cart-bottom-word {
  margin-top: 10rpx;
  margin-right: 20rpx;
  float: right;
  text-align: right;
}

.cart-bottom .cart-bottom-word .total {
  display: block;
  color: #fe6700;
  font-size: 26rpx;
}

.cart-bottom .cart-bottom-word .hints {
  display: block;
  font-size: 30rpx;
}

.cart-bottom .buy-now {
  display: block;
  float: right;
  width:230rpx;
  height:100%;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
   background: #ccc;

}

.cart-bottom .buy-now-active {
  color: white;
  background:#fe6700;
}

.cart-delete {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 88rpx;
  background: white;
}

.cart-delete-active {
  z-index: 3;
}

.cart-delete .delete {
  display: block;
  float: right;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 0;
  padding: 0 60rpx;
  background: #fe6700;
}

.delete-active {
  color: white;
  background: #fe6700;
}
button::after{
  border: none;
}


.cart-empty {
 
  margin: auto;
  color: #868686;
  font-size: 30rpx;
}

.empty-img{
  margin: 120rpx auto 80rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #d4d4d4;
  text-align: center;
}
.empty-img image{
  display: inline-block;
  padding-top: 50rpx;
  width: 100rpx;
  height: 100rpx;
}
.enpty-title{
  display: block;
  font-size: 40rpx;
  color: #333;
  text-align: center;
}
.empty-button{
  margin: 50rpx 50rpx;
}
.empty-button button{
  background: #fe6700;
  color: #fff;
  font-size: 40rpx;
}