/* pages/products/detail/detail.wxss */

swiper {
  width: 100%;
  height: 750rpx;
}

swiper-item image {
  width: 100%;
  height: 750rpx;
}

.item-title {
  font-size: 28rpx;
  line-height: 36rpx;
  margin: 20rpx 0;
  display: block;
}

.product-tip {
  background: #fff;
  width: 90%;
  padding: 30rpx 5% 50rpx;
}

.product-title {
  font-size: 34rpx;
  line-height: 36rpx;
  margin: 20rpx 0;
  display: block;
  width: 100%;
}

.product-abstract {
  line-height: 30rpx;
  margin-bottom: 10rpx;
}

.product-abstract .product-abstract-orange {
  font-size: 24rpx;
  color: #ff8247;
}

.product-abstract .product-abstract-normal {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.54);
}

.price-now {
  font-size: 32rpx;
  color: #ff8247;
}

.price-old {
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #ccc;
  text-decoration: line-through;
}

.section_gap {
  width: 100%;
}

.scroll-header {
  display: flex;
  white-space: nowrap;
  background: #fff;
}

.scroll-header view {
  height: 128rpx;
  width: 128rpx;
  border-right: 1px solid #ededed;
  display: inline-block;
  padding: 0 6rpx;
}

.scroll-header view:last-child {
  border: none;
}

.scroll-view-item .scroll-view-item-img {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin: 0 auto;
}

.scroll-view-item .scroll-view-item-title {
  display: block;
  margin: 10rpx 0;
  font-size: 24rpx;
  text-align: center;
  color: #676767;
}

.scroll-view-item .scroll-view-item-type {
  display: block;
  font-size: 24rpx;
  text-align: center;
  color: #676767;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.survey-box {
  background: #fff;
}

.survey {
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #ff6700;
}

.survey-img {
  width: 100%;
  display: block;
  vertical-align: middle;
}
.survey-product:last-child{
  margin-bottom: 110rpx;
}
.bottomBar {
  position:fixed;
width:100%;
height:120rpx;
background:#fff;
bottom:0;
display:flex;
font-size:30rpx;
line-height:120rpx;

}

.cart{
  width:16%;
border:1rpx solid #f5f5f5;
position:relative;

}
.cart image{
  width:50rpx;
height:50rpx;
margin:35rpx auto;
display:block;

}
.cartNum{
  width:30rpx;
height:30rpx;
border-radius:15rpx;
background:#FF0000;
display:block;
position:absolute;
top:27rpx;
right:15rpx;
z-index:99;
text-align:center;
line-height:30rpx;
font-size:22rpx;
color:#fff;

}
.join{
  width: 42%;
  text-align: center;
  border: 1rpx solid #f5f5f5;
}
.buy{
  width: 42%;
  background: #FF8247;
  text-align: center;
  color: #fff;
}
.join-box{
  width: 100%;
  height: 385rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 99;
}
.join-box image{
  width: 130rpx;
  height: 130rpx;
  margin: 5%;
  float: left;
}
.join-box text{
  display: block;
  float: left;
  font-size: 28rpx;
  width:400rpx;
}
.join-title{
  margin-top:5%; 
}
.join-price{
  color: #FF8247;
  margin-top: 10rpx;
}
.pro-stock{
  width: 90%;
  border-top:1rpx solid #f5f5f5;
  clear: both;
  margin: 0 auto;
  padding:10rpx 0;
}
.pro-stock text{
  margin-top: 15rpx;
  width: 200rpx;
}
.grey{
  color:#808080;
  margin-left: -140rpx;
}
/*加号和减号*/  
/*主容器*/  
.stepper {  
    width: 80px;  
    height: 26px;  
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    margin:8rpx auto;
    float:right; 
}  
.stepper text {  
    width: 19px;  
    line-height: 12px;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper input {  
    width: 40px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
.join-box .button{
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 90rpx;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  background: #FF8247;
}
.mask{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
}
