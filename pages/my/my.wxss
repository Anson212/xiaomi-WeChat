/* pages/my/my.wxss */
.container{
  display: block;
}
page {
  background: #ebebeb;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: left;
  background: #fff;
  width: 100%;
  margin-bottom: 25rpx;
}

.userinfo button {
  margin: 25rpx;
}

.userinfo text {
  padding-bottom: 15px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
  font-size: 28rpx;
  padding-top: 25rpx;
}

.my-order {
  width: 100%;
  background: #fff;
}

.order-head {
  height: 100rpx;
  background: #fff;
}

.left {
  float: left;
  padding: 25rpx 50rpx;
}

.right {
  float: right;
  color: #868686;
  font-size: 30rpx;
  padding: 35rpx 50rpx;
}

.order-box{
  display: inline-block;
}
.order-state-list {
 display:flex;
width:100%;
flex-direction:row;
align-items:center;
background:#ffffff;
padding:25rpx 0;

}

.item {
  width: 33.333333333%;
  border-top: 1px solid #f5f5f5;
  position: relative;
}

.item-num {
  width: 30rpx;
  height: 30rpx;
  border-radius: 100%;
  background: red;
  display: block;
  position: absolute;
  top: 36rpx;
  right: 92rpx;
  z-index: 3;
  text-align: center;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #fff;
}

.item-img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
  padding: 50rpx;
}

.item-text {
  display: block;
  width: 120rpx;
  margin: 0 auto;
  font-size: 26rpx;
  text-align: center;
}

.order-list{
  margin: 10rpx 0;
  padding: 0 20rpx;
  background: #fff;
}
.order-item{
  height:100rpx; 
  border-bottom: 1rpx solid #ebebeb;
}
.order-item:last-child{
  border-bottom: none;
}
.order-item .order-item-img{
  float: left;
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 20rpx;
  position: relative;
  top: 30rpx;
}
.order-item .order-item-tip{
  float: left;
  line-height: 100rpx;
  font-size: 26rpx;
}